<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_length"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.converter.MainActivity">

    <View
        android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"></View>

    <EditText
        android:id="@+id/value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/strut2"
        android:gravity="center"
        android:inputType="numberDecimal"></EditText>

    <EditText
        android:id="@+id/value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/fromtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value1"
        android:text="From"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/value2"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fromtext"
        android:layout_toLeftOf="@+id/value2"
        android:layout_toStartOf="@+id/value2"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"></View>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/strut"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/year1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year1"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/month1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month1" />

                <RadioButton
                    android:id="@+id/week1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/week1" />

                <RadioButton
                    android:id="@+id/day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day1" />

                <RadioButton
                    android:id="@+id/hour1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hour1" />

                <RadioButton
                    android:id="@+id/minute1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minute1" />

                <RadioButton
                    android:id="@+id/second1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second1" />

                <RadioButton
                    android:id="@+id/millisecond1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millisecond1" />

                <RadioButton
                    android:id="@+id/microsecond1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/microsecond1" />

                <RadioButton
                    android:id="@+id/nanosecond1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nanosecond1" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/year2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year2" />

                <RadioButton
                    android:id="@+id/month2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month2"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/week2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/week2" />

                <RadioButton
                    android:id="@+id/day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day2" />

                <RadioButton
                    android:id="@+id/hour2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hour2" />

                <RadioButton
                    android:id="@+id/minute2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minute2" />

                <RadioButton
                    android:id="@+id/second2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second2" />

                <RadioButton
                    android:id="@+id/millisecond2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/millisecond2" />

                <RadioButton
                    android:id="@+id/microsecond2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/microsecond2" />

                <RadioButton
                    android:id="@+id/nanosecond2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nanosecond2" />

            </RadioGroup>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>