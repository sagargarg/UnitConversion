<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_length"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.converter.MainActivity">

    <View
        android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"></View>

    <EditText
        android:id="@+id/value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/strut2"
        android:gravity="center"
        android:inputType="numberDecimal"></EditText>

    <EditText
        android:id="@+id/value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/fromtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value1"
        android:text="From"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/value2"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fromtext"
        android:layout_toLeftOf="@+id/value2"
        android:layout_toStartOf="@+id/value2"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"></View>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/strut"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/bit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bit1"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/byte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/byte1" />

                <RadioButton
                    android:id="@+id/kilobit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilobit1" />

                <RadioButton
                    android:id="@+id/kilobyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilobyte1" />

                <RadioButton
                    android:id="@+id/kibibyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kibibyte1" />

                <RadioButton
                    android:id="@+id/megabit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/megabit1" />

                <RadioButton
                    android:id="@+id/megabyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/megabyte1" />

                <RadioButton
                    android:id="@+id/mebibyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mebibyte1" />

                <RadioButton
                    android:id="@+id/gigabit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gigabit1" />

                <RadioButton
                    android:id="@+id/gigabyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gigabyte1" />

                <RadioButton
                    android:id="@+id/gibibyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gibibyte1" />

                <RadioButton
                    android:id="@+id/terabit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terabit1" />

                <RadioButton
                    android:id="@+id/terabyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terabyte1" />

                <RadioButton
                    android:id="@+id/tebibyte1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tebibyte1" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/bit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bit2" />

                <RadioButton
                    android:id="@+id/byte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/byte2"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/kilobit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilobit2" />

                <RadioButton
                    android:id="@+id/kilobyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilobyte2" />

                <RadioButton
                    android:id="@+id/kibibyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kibibyte2" />

                <RadioButton
                    android:id="@+id/megabit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/megabit2" />

                <RadioButton
                    android:id="@+id/megabyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/megabyte2" />

                <RadioButton
                    android:id="@+id/mebibyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mebibyte2" />

                <RadioButton
                    android:id="@+id/gigabit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gigabit2" />

                <RadioButton
                    android:id="@+id/gigabyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gigabyte2" />

                <RadioButton
                    android:id="@+id/gibibyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gibibyte2" />

                <RadioButton
                    android:id="@+id/terabit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terabit2" />

                <RadioButton
                    android:id="@+id/terabyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terabyte2" />

                <RadioButton
                    android:id="@+id/tebibyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tebibyte2" />

            </RadioGroup>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>