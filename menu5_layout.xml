<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_length"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.converter.MainActivity">

    <View
        android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"></View>

    <EditText
        android:id="@+id/value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/strut2"
        android:gravity="center"
        android:inputType="numberDecimal"></EditText>

    <EditText
        android:id="@+id/value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/fromtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value1"
        android:text="From"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/totext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/value2"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fromtext"
        android:layout_toLeftOf="@+id/value2"
        android:layout_toStartOf="@+id/value2"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"></View>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/strut"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/storageunit1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/storageunit1" />

                <RadioButton
                    android:id="@+id/storageunit2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit2" />

                <RadioButton
                    android:id="@+id/storageunit3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit3" />

                <RadioButton
                    android:id="@+id/storageunit4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit4" />

                <RadioButton
                    android:id="@+id/storageunit5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit5" />

                <RadioButton
                    android:id="@+id/storageunit6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit6" />

                <RadioButton
                    android:id="@+id/storageunit7a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit7" />

                <RadioButton
                    android:id="@+id/storageunit8a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit8" />

                <RadioButton
                    android:id="@+id/storageunit9a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit9" />

                <RadioButton
                    android:id="@+id/storageunit10a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit10" />

                <RadioButton
                    android:id="@+id/storageunit11a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit11" />

                <RadioButton
                    android:id="@+id/storageunit12a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit12" />

                <RadioButton
                    android:id="@+id/storageunit13a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit13" />

                <RadioButton
                    android:id="@+id/storageunit14a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit14" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/strut"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/storageunit1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit1" />

                <RadioButton
                    android:id="@+id/storageunit2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/storageunit2" />

                <RadioButton
                    android:id="@+id/storageunit3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit3" />

                <RadioButton
                    android:id="@+id/storageunit4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit4" />

                <RadioButton
                    android:id="@+id/storageunit5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit5" />

                <RadioButton
                    android:id="@+id/storageunit6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit6" />

                <RadioButton
                    android:id="@+id/storageunit7b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit7" />

                <RadioButton
                    android:id="@+id/storageunit8b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit8" />

                <RadioButton
                    android:id="@+id/storageunit9b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit9" />

                <RadioButton
                    android:id="@+id/storageunit10b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit10" />

                <RadioButton
                    android:id="@+id/storageunit11b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit11" />

                <RadioButton
                    android:id="@+id/storageunit12b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit12" />

                <RadioButton
                    android:id="@+id/storageunit13b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit13" />

                <RadioButton
                    android:id="@+id/storageunit14b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/storageunit14" />
            </RadioGroup>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>